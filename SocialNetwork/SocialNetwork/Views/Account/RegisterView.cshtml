@{
    Layout = null;
}
@model SocialNetwork.Models.RegisterationClass
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Регистрация</title>
</head>
<body>
    @using(Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <table>
            <tr>
                <td>@Html.Label("Логин")</td>
                <td>@Html.TextBoxFor(m=>m.Login)</td>
                <td>@Html.ValidationMessageFor(m=>m.Login)</td>
            </tr>
            <tr>
                <td>@Html.Label("Пароль")</td>
                <td>@Html.PasswordFor(m=>m.Password)</td>
                <td>@Html.ValidationMessageFor(m=>m.Password)</td>
            </tr>
            <tr>
                <td>@Html.Label("Подтвердите пароль")</td>
                <td>@Html.PasswordFor(m=>m.ConfirmPassword)</td>
                <td>@Html.ValidationMessageFor(m=>m.ConfirmPassword)</td>

            </tr>
            <tr>
                <td><input type="submit" value="Подтвердить"></td>
                <td>@Html.ActionLink("Назад",  "LoginView", "Account")</td>

            </tr>
        </table>
    }
</body>
</html>
